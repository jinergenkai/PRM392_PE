<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hungnmse160060.prm392_pe.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/lnHead"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Name "/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Name"
                android:id="@+id/etName"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Date: "/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Date"
                android:id="@+id/etDate"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Gender: "/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Gender"
                android:id="@+id/etGender"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Address: "/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Address"
                android:id="@+id/etAddress"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Bo Mon: "/>
            <Spinner
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:id="@+id/spA"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:id="@+id/btnNewBomon"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        app:layout_constraintTop_toBottomOf="@id/lnHead"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:id="@+id/btnAdd"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/btnDelete"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/lnHead"
        app:layout_constraintLeft_toRightOf="@id/btnAdd"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/lnHead"
        app:layout_constraintLeft_toRightOf="@id/btnDelete"
        android:id="@+id/btnUpdate"
        />

    <Button
        android:id="@+id/btnMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="108dp"
        android:text="Map"
        app:layout_constraintLeft_toRightOf="@id/btnDelete"
        app:layout_constraintTop_toBottomOf="@id/lnHead" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@id/btnAdd"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/lvItem"
        />

</androidx.constraintlayout.widget.ConstraintLayout>